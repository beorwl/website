---
import Layout from '../layouts/Layout.astro';
import Navigation from '../layouts/Navigation.astro';
import Footer from '../layouts/Footer.astro';
---

<Layout title="ORWL â˜‰ Free Labeldeal Check">
	<main>
		<Navigation />

		<!-- Hero Section -->
		<section class="py-24 px-6">
			<div class="max-w-5xl mx-auto text-center">
                     <span class="px-3 py-1 rounded-full text-[10px] md:text-xs tracking-widest uppercase bg-[var(--bg-primary)] text-[var(--accent)] border border-[var(--accent)]/40 inline-block mb-4">
                          Free & Anonym Check
                       </span>
				<h1 class="text-5xl md:text-7xl font-[Secular_One] mb-6">Is Your Labeldeal Fair?</h1>
				<p class="text-[var(--text-secondary)] max-w-2xl mx-auto text-lg">
					Get your label contract reviewed by our artist collective and network with industry experience. We share knowledge for free so you don't get burned by the same traps they did.
				</p>
			</div>
		</section>

        <!-- How It Works Section -->
        <section class="py-24 px-6">
            <div class="max-w-4xl mx-auto">
                <div class="text-center mb-12">
                    <h2 class="text-3xl md:text-4xl font-[Secular_One] mb-4">How It Works</h2>
                </div>

                <div class="grid grid-cols-1 md:grid-cols-4 gap-8">
                    <div class="text-center">
                        <div class="w-16 h-16 mx-auto flex items-center justify-center rounded-full bg-[var(--accent)]/20 mb-4">
                            <span class="text-2xl font-bold text-[var(--accent)]">1</span>
                        </div>
                        <h3 class="text-lg font-bold mb-2 text-[var(--text-primary)]">Upload</h3>
                        <p class="text-sm text-[var(--text-secondary)]">Submit your contract anonymously and secure</p>
                    </div>

                    <div class="text-center">
                        <div class="w-16 h-16 mx-auto flex items-center justify-center rounded-full bg-[var(--accent)]/20 mb-4">
                            <span class="text-2xl font-bold text-[var(--accent)]">2</span>
                        </div>
                        <h3 class="text-lg font-bold mb-2 text-[var(--text-primary)]">Review</h3>
                        <p class="text-sm text-[var(--text-secondary)]">We check every clause and term in your contract</p>
                    </div>

                    <div class="text-center">
                        <div class="w-16 h-16 mx-auto flex items-center justify-center rounded-full bg-[var(--accent)]/20 mb-4">
                            <span class="text-2xl font-bold text-[var(--accent)]">3</span>
                        </div>
                        <h3 class="text-lg font-bold mb-2 text-[var(--text-primary)]">Report</h3>
                        <p class="text-sm text-[var(--text-secondary)]">You get a report with our recommendations</p>
                    </div>

                    <div class="text-center">
                        <div class="w-16 h-16 mx-auto flex items-center justify-center rounded-full bg-[var(--accent)]/20 mb-4">
                            <span class="text-2xl font-bold text-[var(--accent)]">4</span>
                        </div>
                        <h3 class="text-lg font-bold mb-2 text-[var(--text-primary)]">Decide</h3>
                        <p class="text-sm text-[var(--text-secondary)]">Make an informed decision about your contract</p>
                    </div>
                </div>
            </div>
        </section>


        <section class="py-24 px-6 bg-[var(--bg-surface)]">
            <div class="max-w-5xl mx-auto">
                <!-- Two-column layout -->
                <div class="grid grid-cols-1 md:grid-cols-2 gap-12 items-center">
                    <!-- Left column: Content -->
                    <div class="space-y-6">
                        <div class="max-w-3xl mx-auto">
                            <div class="text-center mb-12">
                                <h2 class="text-3xl md:text-4xl font-[Secular_One] mb-4">Submit Your Contract</h2>
                                <p class="text-[var(--text-secondary)] max-w-2xl mx-auto">
                                    If necessary, please redact the names of all involved parties. Anyway, we won't share or make it public.
                                </p>
                            </div>

                            <div class="surface p-8 rounded-lg border border-[var(--accent)]/20">
                                <form id="contract-upload-form" class="space-y-6">
                                    <!-- File Upload -->
                                    <div>
                                        <label class="block text-sm font-medium mb-2 text-[var(--text-primary)]">
                                            Contract Documents*
                                        </label>

                                        <!-- Main dropzone when no files selected -->
                                        <div class="border-2 border-dashed border-[var(--accent)]/30 rounded-lg p-8 text-center hover:border-[var(--accent)]/50 transition-colors cursor-pointer" id="main-dropzone">
                                            <input type="file" id="main-file-input" accept=".pdf,.doc,.docx" class="hidden" required />
                                            <p class="text-[var(--text-primary)] mb-2">Click to upload or drag and drop</p>
                                        </div>

                                        <!-- Selected files container -->
                                        <div id="selected-files-container" class="mt-4 space-y-3 hidden">
                                            <h3 class="text-sm font-medium text-[var(--text-primary)]">Selected Files:</h3>
                                            <div id="files-list" class="space-y-2"></div>

                                            <!-- Add another file option -->
                                            <div id="add-another-container" class="border-2 border-dashed border-[var(--accent)]/30 rounded-lg p-4 text-center hover:border-[var(--accent)]/50 transition-colors cursor-pointer mt-3">
                                                <input type="file" id="additional-file-input" accept=".pdf,.doc,.docx" class="hidden" />
                                                <div class="flex items-center justify-center gap-2">
                                                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-[var(--accent)]" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
                                                    </svg>
                                                    <span class="text-[var(--text-primary)]">Add another file</span>
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                    <!-- Email Field -->
                                    <div>
                                        <label for="email" class="block text-sm font-medium mb-2 text-[var(--text-primary)]">
                                            Your Email*
                                        </label>
                                        <input
                                                type="email"
                                                id="email"
                                                name="email"
                                                class="w-full px-4 py-3 bg-[var(--bg-primary)] border border-[var(--accent)]/30 rounded-lg text-[var(--text-primary)] focus:border-[var(--accent)] focus:outline-none"
                                                placeholder=""
                                                required
                                        />
                                    </div>

                                    <!-- Optional Context -->
                                    <div>
                                        <label for="context" class="block text-sm font-medium mb-2 text-[var(--text-primary)]">
                                            Additional Context
                                        </label>
                                        <textarea
                                                id="context"
                                                rows="4"
                                                class="w-full px-4 py-3 bg-[var(--bg-primary)] border border-[var(--accent)]/30 rounded-lg text-[var(--text-primary)] focus:border-[var(--accent)] focus:outline-none"
                                                placeholder="Any specific concerns or questions about the contract?"
                                        ></textarea>
                                    </div>



                                    <!-- Privacy Note -->
                                    <div class="bg-[var(--bg-primary)] p-4 rounded-lg border border-[var(--accent)]/20">
                                        <div class="flex gap-3">
                                            <div class="text-sm text-[var(--text-secondary)]">
                                                <p class="font-semibold text-[var(--text-primary)] mb-1">Your Privacy is Guaranteed</p>
                                                <ul class="space-y-1 list-disc list-inside">
                                                    <li>We never ask for your name, band name or label name</li>
                                                    <li>Your contract is encrypted during upload and storage</li>
                                                    <li>Report is sent only to your chosen email</li>
                                                </ul>
                                            </div>
                                        </div>
                                    </div>

                                    <!-- Submit Button -->
                                    <button type="submit" class="btn btn-primary w-full text-lg py-4">
                                        Submit Contract for Review
                                    </button>

                                </form>
                            </div>
                        </div>
                    </div>

                    <!-- Right column: Image -->
                    <div class="relative">
                        <div class=" p-6 rounded-lg">
                            <div class="flex gap-4">
                                <div class="flex-shrink-0">
                                    <div class="w-8 h-8 flex items-center justify-center rounded-full bg-[var(--accent)]/20">
                                        <span class="text-[var(--accent)] font-bold">1</span>
                                    </div>
                                </div>
                                <div>
                                    <h3 class="text-xl font-bold mb-2 text-[var(--text-primary)]">Revenue Split & Royalties</h3>
                                    <p class="text-[var(--text-secondary)]">
                                        We examine the percentage you receive from streams, sales, merchandise, and live performances. Is it industry standard or exploitative?
                                    </p>
                                </div>
                            </div>
                        </div>

                        <div class=" p-6 rounded-lg">
                            <div class="flex gap-4">
                                <div class="flex-shrink-0">
                                    <div class="w-8 h-8 flex items-center justify-center rounded-full bg-[var(--accent)]/20">
                                        <span class="text-[var(--accent)] font-bold">2</span>
                                    </div>
                                </div>
                                <div>
                                    <h3 class="text-xl font-bold mb-2 text-[var(--text-primary)]">Contract Duration & Options</h3>
                                    <p class="text-[var(--text-secondary)]">
                                        How long are you locked in? Are there automatic renewals? Can you terminate if things go wrong?
                                    </p>
                                </div>
                            </div>
                        </div>

                        <div class=" p-6 rounded-lg">
                            <div class="flex gap-4">
                                <div class="flex-shrink-0">
                                    <div class="w-8 h-8 flex items-center justify-center rounded-full bg-[var(--accent)]/20">
                                        <span class="text-[var(--accent)] font-bold">3</span>
                                    </div>
                                </div>
                                <div>
                                    <h3 class="text-xl font-bold mb-2 text-[var(--text-primary)]">Rights & Ownership</h3>
                                    <p class="text-[var(--text-secondary)]">
                                        Who owns your master recordings? Your publishing rights? Your merchandise designs? This is crucial.
                                    </p>
                                </div>
                            </div>
                        </div>

                        <div class=" p-6 rounded-lg">
                            <div class="flex gap-4">
                                <div class="flex-shrink-0">
                                    <div class="w-8 h-8 flex items-center justify-center rounded-full bg-[var(--accent)]/20">
                                        <span class="text-[var(--accent)] font-bold">4</span>
                                    </div>
                                </div>
                                <div>
                                    <h3 class="text-xl font-bold mb-2 text-[var(--text-primary)]">Recoupment & Advances</h3>
                                    <p class="text-[var(--text-secondary)]">
                                        If they're offering an advance, what are the terms for paying it back? Are the recoupment terms reasonable?
                                    </p>
                                </div>
                            </div>
                        </div>

                        <div class=" p-6 rounded-lg">
                            <div class="flex gap-4">
                                <div class="flex-shrink-0">
                                    <div class="w-8 h-8 flex items-center justify-center rounded-full bg-[var(--accent)]/20">
                                        <span class="text-[var(--accent)] font-bold">5</span>
                                    </div>
                                </div>
                                <div>
                                    <h3 class="text-xl font-bold mb-2 text-[var(--text-primary)]">Transparency & Reporting</h3>
                                    <p class="text-[var(--text-secondary)]">
                                        Are you guaranteed regular sales reports? Can you audit their books? Transparency is everything.
                                    </p>
                                </div>
                            </div>
                        </div>

                        <div class=" p-6 rounded-lg">
                            <div class="flex gap-4">
                                <div class="flex-shrink-0">
                                    <div class="w-8 h-8 flex items-center justify-center rounded-full bg-[var(--accent)]/20">
                                        <span class="text-[var(--accent)] font-bold">6</span>
                                    </div>
                                </div>
                                <div>
                                    <h3 class="text-xl font-bold mb-2 text-[var(--text-primary)]">Red Flags & Exploitative Clauses</h3>
                                    <p class="text-[var(--text-secondary)]">
                                        We identify predatory terms, hidden fees, and any clauses that could trap you in an unfair arrangement.
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>

		<!-- Testimonials / Trust Section -->
		<section class="py-24 px-6">
			<div class="max-w-4xl mx-auto">
				<div class="text-center mb-12">
					<h2 class="text-3xl md:text-4xl font-[Secular_One] mb-4">Why Trust Us?</h2>
				</div>

				<div class="grid grid-cols-1 md:grid-cols-2 gap-8">
					<div class="surface p-6 rounded-lg border border-[var(--accent)]/20">
						<h3 class="text-xl font-bold mb-3 text-[var(--text-primary)]">Community-Driven</h3>
						<p class="text-[var(--text-secondary)]">
							We're part of the metal community, not corporate lawyers looking to profit from your success. We genuinely want to see artists protected from exploitation.
						</p>
					</div>

					<div class="surface p-6 rounded-lg border border-[var(--accent)]/20">
						<h3 class="text-xl font-bold mb-3 text-[var(--text-primary)]">Real Experience</h3>
						<p class="text-[var(--text-secondary)]">
							Our review team includes artists who've signed good deals, bad deals, and everything in between. We know what to look for because we've lived it.
						</p>
					</div>

					<div class="surface p-6 rounded-lg border border-[var(--accent)]/20">
						<h3 class="text-xl font-bold mb-3 text-[var(--text-primary)]">No Agenda</h3>
						<p class="text-[var(--text-secondary)]">
							We don't represent labels, we don't sell legal services, and we're not trying to recruit you. Our only goal is fair treatment for artists.
						</p>
					</div>

					<div class="surface p-6 rounded-lg border border-[var(--accent)]/20">
						<h3 class="text-xl font-bold mb-3 text-[var(--text-primary)]">Nonprofit Mission</h3>
						<p class="text-[var(--text-secondary)]">
							As a registered nonprofit, we're legally bound to serve the community, not shareholders. This service will always be free.
						</p>
					</div>
				</div>
			</div>
		</section>

		<!-- FAQ Section -->
		<section class="py-24 px-6">
			<div class="max-w-3xl mx-auto">
				<div class="text-center mb-12">
					<h2 class="text-3xl md:text-4xl font-[Secular_One] mb-4">Common Questions</h2>
				</div>

				<div class="space-y-4">
					<details class="surface group rounded-lg">
						<summary class="p-6 cursor-pointer list-none font-bold text-lg flex justify-between items-center">
							<span class="text-[var(--text-primary)]">Is this really free?</span>
						</summary>
						<div class="px-6 pb-6 text-[var(--text-secondary)]">
							<p>Yes, completely free. No hidden fees, no upsells, no obligations. This is our contribution to protecting artists in the metal community.</p>
						</div>
					</details>

					<details class="surface group rounded-lg">
						<summary class="p-6 cursor-pointer list-none font-bold text-lg flex justify-between items-center">
							<span class="text-[var(--text-primary)]">How anonymous is it really?</span>
							</summary>
						<div class="px-6 pb-6 text-[var(--text-secondary)]">
							<p>We never ask for identifying information. You can use a burner email, Discord alt, or any anonymous contact method. Our team reviews the contract without knowing who you are or which label it's from.</p>
						</div>
					</details>

					<details class="surface group rounded-lg">
						<summary class="p-6 cursor-pointer list-none font-bold text-lg flex justify-between items-center">
							<span class="text-[var(--text-primary)]">Can you provide legal advice?</span>
						</summary>
						<div class="px-6 pb-6 text-[var(--text-secondary)]">
							<p>We provide educational feedback and highlight concerning clauses, but we're not lawyers and this isn't legal advice. For legal representation, you'll need to consult a lawyer licensed in your jurisdiction.</p>
						</div>
					</details>

					<details class="surface group rounded-lg">
						<summary class="p-6 cursor-pointer list-none font-bold text-lg flex justify-between items-center">
							<span class="text-[var(--text-primary)]">How long does the review take?</span>
						</summary>
						<div class="px-6 pb-6 text-[var(--text-secondary)]">
							<p>Typically 5-7 business days. Complex contracts or high volume may take longer, but we'll always get back to you with a thorough analysis.</p>
						</div>
					</details>

					<details class="surface group rounded-lg">
						<summary class="p-6 cursor-pointer list-none font-bold text-lg flex justify-between items-center">
							<span class="text-[var(--text-primary)]">What if I've already signed?</span>
						</summary>
						<div class="px-6 pb-6 text-[var(--text-secondary)]">
							<p>We can still review it and help you understand what you've committed to. Depending on the terms and your jurisdiction, there may be options for renegotiation or early termination.</p>
						</div>
					</details>
				</div>
			</div>
		</section>

		<Footer />
	</main>
</Layout>

<script>
	// File collection to store all files
	let selectedFiles = [];

	// DOM elements
	const mainDropzone = document.getElementById('main-dropzone');
	const mainFileInput = document.getElementById('main-file-input');
	const selectedFilesContainer = document.getElementById('selected-files-container');
	const filesList = document.getElementById('files-list');
	const addAnotherContainer = document.getElementById('add-another-container');
	const additionalFileInput = document.getElementById('additional-file-input');
	const form = document.getElementById('contract-upload-form');

	// File validation
	function isValidFile(file) {
		const allowedTypes = ['application/pdf', 'application/msword', 'application/vnd.openxmlformats-officedocument.wordprocessingml.document'];
		const maxSize = 10 * 1024 * 1024; // 10MB

		// Check file type
		if (!allowedTypes.includes(file.type)) {
			alert(`Invalid file type: ${file.name}\nOnly PDF, DOC, and DOCX are allowed.`);
			return false;
		}

		// Check file size
		if (file.size > maxSize) {
			alert(`File too large: ${file.name}\nMaximum size is 10MB.`);
			return false;
		}

		return true;
	}

	// Create file item element
	function createFileItem(file, index) {
		const fileItem = document.createElement('div');
		fileItem.className = 'flex items-center justify-between p-3 bg-[var(--bg-primary)] rounded-lg border border-[var(--accent)]/20';
		fileItem.innerHTML = `
			<div class="flex items-center gap-2">
				<svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-[var(--accent)]" fill="none" viewBox="0 0 24 24" stroke="currentColor">
					<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
				</svg>
				<span class="text-[var(--text-primary)] text-sm truncate max-w-[180px]">${file.name}</span>
			</div>
			<button type="button" class="remove-file-btn text-[var(--text-secondary)] hover:text-[var(--accent)] transition-colors" data-index="${index}">
				<svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
					<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
				</svg>
			</button>
		`;

		return fileItem;
	}

	// Update files display
	function updateFilesDisplay() {
		// Clear the files list
		filesList.innerHTML = '';

		// Add each file to the list
		selectedFiles.forEach((file, index) => {
			const fileItem = createFileItem(file, index);
			filesList.appendChild(fileItem);
		});

		// Show/hide containers based on whether files are selected
		if (selectedFiles.length > 0) {
			mainDropzone.classList.add('hidden');
			selectedFilesContainer.classList.remove('hidden');

			// Add event listeners to remove buttons
			document.querySelectorAll('.remove-file-btn').forEach(button => {
				button.addEventListener('click', function() {
					const index = parseInt(this.getAttribute('data-index'));
					removeFile(index);
				});
			});
		} else {
			mainDropzone.classList.remove('hidden');
			selectedFilesContainer.classList.add('hidden');
		}
	}

	// Add a file to the collection
	function addFile(file) {
		if (isValidFile(file)) {
			selectedFiles.push(file);
			updateFilesDisplay();
		}
	}

	// Remove a file from the collection
	function removeFile(index) {
		selectedFiles.splice(index, 1);
		updateFilesDisplay();
	}

	// Handle file selection from the main dropzone
	mainFileInput.addEventListener('change', (e) => {
		const file = e.target.files[0];
		if (file) {
			addFile(file);
			mainFileInput.value = ''; // Reset input
		}
	});

	// Handle file selection from the "Add another file" option
	additionalFileInput.addEventListener('change', (e) => {
		const file = e.target.files[0];
		if (file) {
			addFile(file);
			additionalFileInput.value = ''; // Reset input
		}
	});

	// Click handlers for dropzones
	mainDropzone.addEventListener('click', () => {
		mainFileInput.click();
	});

	addAnotherContainer.addEventListener('click', () => {
		additionalFileInput.click();
	});

	// Drag and drop for main dropzone
	mainDropzone.addEventListener('dragover', (e) => {
		e.preventDefault();
		mainDropzone.classList.add('border-[var(--accent)]');
	});

	mainDropzone.addEventListener('dragleave', () => {
		mainDropzone.classList.remove('border-[var(--accent)]');
	});

	mainDropzone.addEventListener('drop', (e) => {
		e.preventDefault();
		mainDropzone.classList.remove('border-[var(--accent)]');

		if (e.dataTransfer.files.length > 0) {
			const file = e.dataTransfer.files[0];
			addFile(file);
		}
	});

	// Drag and drop for "Add another file" container
	addAnotherContainer.addEventListener('dragover', (e) => {
		e.preventDefault();
		addAnotherContainer.classList.add('border-[var(--accent)]');
	});

	addAnotherContainer.addEventListener('dragleave', () => {
		addAnotherContainer.classList.remove('border-[var(--accent)]');
	});

	addAnotherContainer.addEventListener('drop', (e) => {
		e.preventDefault();
		addAnotherContainer.classList.remove('border-[var(--accent)]');

		if (e.dataTransfer.files.length > 0) {
			const file = e.dataTransfer.files[0];
			addFile(file);
		}
	});

	// Form submission
	form.addEventListener('submit', async (e) => {
		e.preventDefault();

		if (selectedFiles.length === 0) {
			alert('Please select at least one file to upload');
			return;
		}

		const submitButton = form.querySelector('button[type="submit"]');
		const originalButtonText = submitButton.textContent;

		try {
			// Disable button and show loading state
			submitButton.disabled = true;
			submitButton.textContent = 'Uploading...';

			// Get form values
			const contextTextarea = document.getElementById('context');
			const additionalContext = contextTextarea?.value || '';
			const emailInput = document.getElementById('email');
			const email = emailInput?.value;

			if (!email) {
				alert('Please provide your email address');
				return;
			}

			// Create FormData
			const formData = new FormData();
			selectedFiles.forEach(file => {
				formData.append('file', file);
			});

			formData.append('additionalContext', additionalContext);
			formData.append('email', email);

			// Submit to API
			const response = await fetch('/api/upload-contract', {
				method: 'POST',
				body: formData
			});

			const result = await response.json();

			if (response.ok && result.success) {
				alert(`Success! Your contract has been submitted for review.\n\nSubmission ID: ${result.submissionId}\n\nYou'll receive a detailed analysis at your provided email within 5-7 business days.`);

				// Reset form
				form.reset();
				selectedFiles = [];
				updateFilesDisplay();
			} else {
				alert(`Error: ${result.error || 'Failed to upload contract. Please try again.'}`);
			}

		} catch (error) {
			console.error('Upload error:', error);
			alert('An error occurred while uploading your contract. Please try again.');
		} finally {
			// Re-enable button
			submitButton.disabled = false;
			submitButton.textContent = originalButtonText || 'Submit Contract for Review';
		}
	});
</script>
