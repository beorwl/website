---
import Layout from '../layouts/Layout.astro';
import Navigation from '../layouts/Navigation.astro';
import Footer from "../layouts/Footer.astro";
import StreamingCostSlider from "../components/StreamingCostSlider.astro";

const base = import.meta.env.BASE_URL;
---

<Layout title="ORWL ☉ Time To Stream Fair">
	<main class="min-h-screen">
		<Navigation />
		<section class="min-h-[80vh] flex items-center justify-center p-6 relative">
			<div class="hero-bg">
				<div class="symbol s1 large">☥</div>
				<div class="symbol s2">✧</div>
				<div class="symbol s3 large">⚸</div>
				<div class="symbol s6 small">☉</div>
				<div class="symbol s7 small">☿</div>
			</div>
			<div class="max-w-5xl mx-auto text-center relative">
				<div class="mb-4 flex justify-center">
                       <span class="px-3 py-1 rounded-full text-[10px] md:text-xs tracking-widest uppercase bg-[var(--bg-primary)] text-[var(--accent)] border border-[var(--accent)]/40 inline-block mb-4">
                              Extreme Metal Streaming
                       </span>
				</div>
				<h1 class="text-5xl md:text-7xl mb-2 font-[Secular_One] text-monochrome">
					<span class="block">Artist First</span>
					<span class="block">Fuck Capitalism</span>
					<span class="block">No AI Bullshit</span>
				</h1>
				<div class="mx-auto mb-6 flex items-center justify-center gap-2 text-[var(--accent)]/80 select-none" aria-hidden="true">
					<span class="text-xl md:text-2xl">☥</span>
					<span class="text-xl md:text-2xl">✧</span>
					<span class="text-xl md:text-2xl">⚸</span>
					<span class="text-xl md:text-2xl">☉</span>
					<span class="text-xl md:text-2xl">☿</span>
				</div>
				<p class="text-2xl mb-8 text-monochrome-muted max-w-3xl mx-auto">
                    Your music, your rules. Take back control of your music library, keep your collection yours and stream the way it was meant to be. Fair and Independent.
				</p>
				<div class="flex flex-col sm:flex-row gap-4 justify-center">
                    <a href={`${base}coming-soon`} class="btn btn-primary">
                        Join The Community
                    </a>

					<a href={`${base}manifesto`} class="btn btn-secondary">
						Read The Manifesto
					</a>
				</div>
			</div>
		</section>

        <section class="py-24 px-6">
            <div class="max-w-5xl mx-auto">
                <div class="grid grid-cols-1 md:grid-cols-2 gap-12 items-center">
                    <div class="space-y-8">
                        <div class="mb-16">
                            <span class="px-3 py-1 rounded-full text-[10px] md:text-xs tracking-widest uppercase bg-[var(--bg-primary)] text-[var(--accent)] border border-[var(--accent)]/40 inline-block mb-4">
                                Full Ownership
                            </span>
                            <h2 class="text-4xl md:text-5xl font-[Secular_One] mb-4">Time To Stream Fair<br>Against Spotify</h2>
                            <p class="text-[var(--text-secondary)] max-w-2xl mx-auto">Stream the way you like, not the way corporations dictate.</p>
                        </div>
                        <div class="flex gap-4 items-start">
                            <div class="w-10 h-10 flex-shrink-0 flex items-center justify-center rounded-full bg-[var(--monochrome-accent)]/20">
                                <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" style="color: var(--monochrome-accent)">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
                                </svg>
                            </div>
                            <div>
                                <h3 class="text-xl font-bold mb-2" style="color: var(--monochrome-accent)">100% Artist Payouts</h3>
                                <p class="text-[var(--text-secondary)]">We pass all streaming revenue directly to the artists you listen to. There are no platform fees.</p>
                            </div>
                        </div>
                        <div class="flex gap-4 items-start">
                            <div class="w-10 h-10 flex-shrink-0 flex items-center justify-center rounded-full bg-[var(--monochrome-accent)]/20">
                                <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" style="color: var(--monochrome-accent)">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 11a4 4 0 11-8 0 4 4 0 018 0zm-8 6a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                                </svg>
                            </div>
                            <div>
                                <h3 class="text-xl font-bold mb-2" style="color: var(--monochrome-accent)">Download Your Streams</h3>
                                <p class="text-[var(--text-secondary)]">All the songs you stream becomes part of your personal collection and you can even download them.</p>
                            </div>
                        </div>
                        <div class="flex gap-4 items-start">
                            <div class="w-10 h-10 flex-shrink-0 flex items-center justify-center rounded-full bg-[var(--monochrome-accent)]/20">
                                <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" style="color: var(--monochrome-accent)">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                                </svg>
                            </div>
                            <div>
                                <h3 class="text-xl font-bold mb-2" style="color: var(--monochrome-accent)">Upload & Stream Your Own Library</h3>
                                <p class="text-[var(--text-secondary)]">You can integrate your own music library, upload your audio files and stream them from anywhere.</p>
                            </div>
                        </div>
               
                    </div>
                    <div class="relative">
                        <div class="rounded-lg overflow-hidden">
                            <img src="../../resources/images/fuck-major-streaming.png" alt="Metal concert crowd" class="w-full h-full object-cover">
                        </div>
                    </div>
                </div>
            </div>
        </section>



        <!-- Stream2Own Section -->
		<section class="py-24 px-6 bg-[var(--bg-surface)]">
			<div class="max-w-5xl mx-auto">
				<div class="text-center mb-16">
                          <span class="px-3 py-1 rounded-full text-[10px] md:text-xs tracking-widest uppercase bg-[var(--bg-surface)] text-[var(--accent)] border border-[var(--accent)]/40 inline-block mb-4">
              	Stream-2-Own
            </span>

					<h2 class="text-4xl md:text-5xl font-[Secular_One] mb-4">Stream Without Subscription<br>Until You Own The Song</h2>
					<p class="text-[var(--text-secondary)] max-w-2xl mx-auto">Stream like always, but this time you end up owning the song. No subscription required.</p>
				</div>

				<div class="grid grid-cols-1 md:grid-cols-3 gap-8 mt-12">
					<!-- Card 1: Stream -->
					<div class="surface p-6 rounded-lg border border-[var(--monochrome-accent)]/20">
						<div class="w-12 h-12 flex items-center justify-center rounded-full bg-[var(--monochrome-accent)]/20 mb-4">
							<svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" style="color: var(--monochrome-accent)">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14.752 11.168l-3.197-2.132A1 1 0 0010 9.87v4.263a1 1 0 001.555.832l3.197-2.132a1 1 0 000-1.664z" />
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
							</svg>
						</div>
						<h3 class="text-xl font-bold mb-2" style="color: var(--monochrome-accent)">Stream By Stream</h3>
						<p class="text-[var(--text-secondary)]">
                            Each time you listen, you’re building ownership.
                        </p>
                        <p class="text-[var(--text-secondary)] mt-2">
                            Your streams directly support the artist and bring you closer to owning the track forever.
                        </p>
					</div>

					<!-- Card 2: Progress -->
					<div class="surface p-6 rounded-lg border border-[var(--monochrome-accent)]/20">
						<div class="w-12 h-12 flex items-center justify-center rounded-full bg-[var(--monochrome-accent)]/20 mb-4">
							<svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" style="color: var(--monochrome-accent)">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
							</svg>
						</div>
						<h3 class="text-xl font-bold mb-2" style="color: var(--monochrome-accent)">Own The Song</h3>
						<p class="text-[var(--text-secondary)]">
                            Once you’ve streamed a song eight times, it’s yours.
                        </p>
                        <p class="text-[var(--text-secondary)] mt-2">
                            Download it, keep it forever and enjoy your it your way. Even if you leave us.
                        </p>
					</div>

                    <!-- Card 2: Progress -->
                    <div class="surface p-6 rounded-lg border border-[var(--monochrome-accent)]/20">
                        <div class="w-12 h-12 flex items-center justify-center rounded-full bg-[var(--monochrome-accent)]/20 mb-4">
                            <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" style="color: var(--monochrome-accent)">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
                            </svg>
                        </div>
                        <h3 class="text-xl font-bold mb-2" style="color: var(--monochrome-accent)">Fair Cost Calculator</h3>
                        <StreamingCostSlider />
                    </div>

				</div>

				<div class="text-center mt-12">
					<a href={`${base}manifesto#stream2own`} class="btn btn-secondary">Learn More</a>
				</div>
			</div>
		</section>

        <section class="py-24 px-6">
            <div class="max-w-5xl mx-auto">
                <div class="text-center mb-16">
      <span
              class="px-3 py-1 rounded-full text-[10px] md:text-xs tracking-widest uppercase bg-[var(--bg-primary)] text-[var(--accent)] border border-[var(--accent)]/40 inline-block mb-4"
      >
        Integrate Your Own Library
      </span>

                    <h2 class="text-4xl md:text-5xl font-[Secular_One] mb-4">
                        Missing Your Favorite Artists?
                    </h2>
                    <p class="text-[var(--text-secondary)] max-w-2xl mx-auto">
                        Simply upload your own audio files to your optional cloud storage and
                        stream your personal music library from anywhere.
                    </p>
                </div>

                <!-- Cloud Storage Pricing -->
                <div class="grid grid-cols-1 md:grid-cols-4 gap-8 mt-12 items-stretch">
                    <!-- Free Plan -->
                    <div class="surface p-8 rounded-lg transition-all flex flex-col">
                        <div class="text-center flex flex-col flex-1">
                            <h3
                                    class="text-2xl font-bold mb-2"
                                    style="color: var(--monochrome-accent)"
                            >
                                Free
                            </h3>
                            <div class="mb-6">
                                <span class="text-5xl font-bold">0€</span>
                                <span class="text-[var(--text-secondary)]">/month</span>
                            </div>
                            <div class="text-4xl font-bold mb-6 text-[var(--accent)]">100 MB</div>
                            <ul class="text-left space-y-3 mb-8 text-[var(--text-secondary)]">
                                <li class="flex items-start gap-2">
                                    <span class="text-[var(--accent)] mt-1">✓</span>
                                    <span>Upload ~20 Songs</span>
                                </li>
                                <li class="flex items-start gap-2">
                                    <span class="text-[var(--accent)] mt-1">✓</span>
                                    <span>Stream from anywhere</span>
                                </li>
                            </ul>
                            <a href={`${base}coming-soon`} class="btn btn-secondary w-full mt-auto"
                            >Get Started</a
                            >
                        </div>
                    </div>

                    <!-- Small Plan -->
                    <div class="surface p-8 rounded-lg transition-all flex flex-col">
                        <div class="text-center flex flex-col flex-1">
                            <h3
                                    class="text-2xl font-bold mb-2"
                                    style="color: var(--monochrome-accent)"
                            >
                                Small
                            </h3>
                            <div class="mb-6">
                                <span class="text-5xl font-bold">2€</span>
                                <span class="text-[var(--text-secondary)]">/month</span>
                            </div>
                            <div class="text-4xl font-bold mb-6 text-[var(--accent)]">5 GB</div>
                            <ul class="text-left space-y-3 mb-8 text-[var(--text-secondary)]">
                                <li class="flex items-start gap-2">
                                    <span class="text-[var(--accent)] mt-1">✓</span>
                                    <span>Upload ~1,500 Songs</span>
                                </li>
                                <li class="flex items-start gap-2">
                                    <span class="text-[var(--accent)] mt-1">✓</span>
                                    <span>Stream from anywhere</span>
                                </li>
                            </ul>
                            <a href={`${base}coming-soon`} class="btn btn-secondary w-full mt-auto"
                            >Get Started</a
                            >
                        </div>
                    </div>

                    <!-- Medium Plan -->
                    <div class="surface p-8 rounded-lg transition-all flex flex-col">
                        <div class="text-center flex flex-col flex-1">
                            <h3
                                    class="text-2xl font-bold mb-2"
                                    style="color: var(--monochrome-accent)"
                            >
                                Medium
                            </h3>
                            <div class="mb-6">
                                <span class="text-5xl font-bold">4€</span>
                                <span class="text-[var(--text-secondary)]">/month</span>
                            </div>
                            <div class="text-4xl font-bold mb-6 text-[var(--accent)]">50 GB</div>
                            <ul class="text-left space-y-3 mb-8 text-[var(--text-secondary)]">
                                <li class="flex items-start gap-2">
                                    <span class="text-[var(--accent)] mt-1">✓</span>
                                    <span>Upload ~12,500 Songs</span>
                                </li>
                                <li class="flex items-start gap-2">
                                    <span class="text-[var(--accent)] mt-1">✓</span>
                                    <span>Stream from anywhere</span>
                                </li>
                            </ul>
                            <a href={`${base}coming-soon`} class="btn btn-secondary w-full mt-auto"
                            >Get Started</a
                            >
                        </div>
                    </div>

                    <!-- Large Plan -->
                    <div class="surface p-8 rounded-lg transition-all flex flex-col">
                        <div class="text-center flex flex-col flex-1">
                            <h3
                                    class="text-2xl font-bold mb-2"
                                    style="color: var(--monochrome-accent)"
                            >
                                Large
                            </h3>
                            <div class="mb-6">
                                <span class="text-5xl font-bold">9€</span>
                                <span class="text-[var(--text-secondary)]">/month</span>
                            </div>
                            <div class="text-4xl font-bold mb-6 text-[var(--accent)]">100 GB</div>
                            <ul class="text-left space-y-3 mb-8 text-[var(--text-secondary)]">
                                <li class="flex items-start gap-2">
                                    <span class="text-[var(--accent)] mt-1">✓</span>
                                    <span>Upload ~25,000 Songs</span>
                                </li>
                                <li class="flex items-start gap-2">
                                    <span class="text-[var(--accent)] mt-1">✓</span>
                                    <span>Stream from anywhere</span>
                                </li>
                            </ul>
                            <a href={`${base}coming-soon`} class="btn btn-secondary w-full mt-auto"
                            >Get Started</a
                            >
                        </div>
                    </div>
                </div>

                <div class="text-center mt-12">
                    <p class="text-[var(--text-secondary)] text-sm">
                        Cloud storage is completely optional. You can still stream our entire
                        library without it.
                    </p>
                </div>
            </div>
        </section>



        <!-- FAQ Section -->
		<section class="py-24 px-6">
			<div class="max-w-4xl mx-auto">
				<div class="text-center mb-16">
			        <span class="px-3 py-1 rounded-full text-[10px] md:text-xs tracking-widest uppercase bg-[var(--bg-primary)] text-[var(--accent)] border border-[var(--accent)]/40 inline-block mb-4">
                           FAQ
                       </span>
					<h2 class="text-4xl md:text-5xl font-[Secular_One] mb-4">Common Questions</h2>
				</div>

				<div class="space-y-4">

                    <details class="surface group rounded-lg">
						<summary class="p-6 cursor-pointer list-none font-bold text-xl flex justify-between items-center">
							<span style="color: var(--monochrome-accent)">How do you finance yourselves?</span>
							<svg class="w-6 h-6 transition-transform duration-300 group-open:rotate-180" fill="none" viewBox="0 0 24 24" stroke="currentColor">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
							</svg>
						</summary>
						<div class="px-6 pb-6 text-[var(--text-secondary)] content">
							<p>

                              </p>
						</div>
					</details>

                    <details class="surface group rounded-lg">
                        <summary class="p-6 cursor-pointer list-none font-bold text-xl flex justify-between items-center">
                            <span style="color: var(--monochrome-accent)">How can I participate or support you?</span>
                            <svg class="w-6 h-6 transition-transform duration-300 group-open:rotate-180" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
                            </svg>
                        </summary>
                        <div class="px-6 pb-6 text-[var(--text-secondary)] content">
                            <p>

                            </p>
                        </div>
                    </details>


                    <details class="surface group rounded-lg">
                        <summary class="p-6 cursor-pointer list-none font-bold text-xl flex justify-between items-center">
                            <span style="color: var(--monochrome-accent)">How do you ensure that you will remain fair in the future?</span>
                            <svg class="w-6 h-6 transition-transform duration-300 group-open:rotate-180" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
                            </svg>
                        </summary>
                        <div class="px-6 pb-6 text-[var(--text-secondary)] content">
                            <p>

                            </p>
                        </div>
                    </details>

                    <details class="surface group rounded-lg">
                        <summary class="p-6 cursor-pointer list-none font-bold text-xl flex justify-between items-center">
                            <span style="color: var(--monochrome-accent)">What is your position on AI?</span>
                            <svg class="w-6 h-6 transition-transform duration-300 group-open:rotate-180" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
                            </svg>
                        </summary>
                        <div class="px-6 pb-6 text-[var(--text-secondary)] content">
                            <p>
                            </p>
                        </div>
                    </details>


                    <details class="surface group rounded-lg">
                        <summary class="p-6 cursor-pointer list-none font-bold text-xl flex justify-between items-center">
                            <span style="color: var(--monochrome-accent)">When will the app be ready?</span>
                            <svg class="w-6 h-6 transition-transform duration-300 group-open:rotate-180" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
                            </svg>
                        </summary>
                        <div class="px-6 pb-6 text-[var(--text-secondary)] content">
                            <p>
                            </p>
                        </div>
                    </details>


				</div>

				<div class="text-center mt-12">
					<a href={`${base}manifesto`} class="btn btn-secondary">Read The Manifesto</a>
				</div>
			</div>
		</section>


        <Footer />
	</main>
</Layout>

