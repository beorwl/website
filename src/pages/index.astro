---
import Layout from '../layouts/Layout.astro';
import Navigation from '../components/Navigation.astro';
import Footer from "../components/Footer.astro";
import StreamingCostSlider from "../components/StreamingCostSlider.astro";
---

<Layout title="BEORWL - Extreme Metal Streaming | Artist First, Fuck Capitalism & No AI Bullshit">
	<main class="min-h-screen">
		<Navigation />
		<!-- Hero Section -->
		<section class="min-h-[80vh] flex items-center justify-center p-6 relative">
			<!-- Animated occult background -->
			<div class="hero-bg">
				<div class="symbol s1 large">☥</div>
				<div class="symbol s2">✧</div>
				<div class="symbol s3 large">⚸</div>
				<div class="symbol s6 small">☉</div>
				<div class="symbol s7 small">☿</div>
			</div>
			<div class="max-w-5xl mx-auto text-center relative">
				<!-- Sub-header badge -->
				<div class="mb-4 flex justify-center">
					<span class="px-3 py-1 rounded-full text-[10px] md:text-xs tracking-widest uppercase bg-[var(--bg-surface)] text-[var(--accent)] border border-[var(--accent)]/40">
						Extreme Metal Streaming
					</span>
				</div>
				<!-- Main Brand -->
				<h1 class="text-5xl md:text-7xl mb-2 font-[Secular_One] leading-tight">
					<span class="block">Artist First</span>
					<span class="block">Fuck Capitalism</span>
					<span class="block">No AI Bullshit</span>
				</h1>

				<!-- Occult symbol separator -->
				<div class="mx-auto mb-6 flex items-center justify-center gap-2 text-[var(--accent)]/80 select-none" aria-hidden="true">
					<span class="text-xl md:text-2xl">☥</span>
					<span class="text-xl md:text-2xl">✧</span>
					<span class="text-xl md:text-2xl">⚸</span>
					<span class="text-xl md:text-2xl">☉</span>
					<span class="text-xl md:text-2xl">☿</span>
				</div>
				
				<p class="text-base md:text-lg mb-8 text-[var(--text-secondary)] max-w-3xl mx-auto leading-relaxed">
				
				</p>
				
				<div class="flex flex-col sm:flex-row gap-4 justify-center">
					<button class="btn btn-primary">
						Jetzt mitmachen
					</button>
					<a href="/manifesto" class="btn btn-secondary">
						Zum Manifesto
					</a>
				</div>
			</div>
		</section>

        <!-- Support Your Metal Scene Section -->
        <section class="py-24 px-6">
            <div class="max-w-5xl mx-auto">


                <!-- Two-column layout -->
                <div class="grid grid-cols-1 md:grid-cols-2 gap-12 items-center">
                    <!-- Left column: Content -->
                    <div class="space-y-6">

                        <div class=" mb-16">
                            <span class="px-3 py-1 rounded-full text-[10px] md:text-xs tracking-widest uppercase bg-[var(--bg-primary)] text-[var(--accent)] border border-[var(--accent)]/40 inline-block mb-4">
                                Full Ownership
                            </span>
                            <h2 class="text-4xl md:text-5xl font-[Secular_One] mb-4">Time To Stream Fair</h2>
                            <p class="text-[var(--text-secondary)] max-w-2xl mx-auto">Your favorite artists get paid fairly and you regain full control over your music library.</p>
                        </div>

                        <div class="flex gap-4 items-start">
                            <div class="w-10 h-10 flex-shrink-0 flex items-center justify-center rounded-full bg-[var(--hex-violet)]/20">
                                <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" style="color: var(--hex-violet)">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
                                </svg>
                            </div>
                            <div>
                                <h3 class="text-xl font-bold mb-2" style="color: var(--blood-sigil)">100% Artist Payouts</h3>
                                <p class="text-[var(--text-secondary)]">We pass all streaming revenue directly to the artists you listen to. There are no platform fees.</p>
                            </div>
                        </div>

                        <div class="flex gap-4 items-start">
                            <div class="w-10 h-10 flex-shrink-0 flex items-center justify-center rounded-full bg-[var(--hex-violet)]/20">
                                <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" style="color: var(--hex-violet)">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 11a4 4 0 11-8 0 4 4 0 018 0zm-8 6a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                                </svg>
                            </div>
                            <div>
                                <h3 class="text-xl font-bold mb-2" style="color: var(--blood-sigil)">Download Your Streams</h3>
                                <p class="text-[var(--text-secondary)]">All the songs you stream becomes part of your personal collection and you can even download them.</p>
                            </div>
                        </div>

                        <div class="flex gap-4 items-start">
                            <div class="w-10 h-10 flex-shrink-0 flex items-center justify-center rounded-full bg-[var(--hex-violet)]/20">
                                <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" style="color: var(--hex-violet)">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                                </svg>
                            </div>
                            <div>
                                <h3 class="text-xl font-bold mb-2" style="color: var(--blood-sigil)">Stream Your Own Library</h3>
                                <p class="text-[var(--text-secondary)]">You can integrate your own music library like MP3s and stream them from anywhere.</p>
                            </div>
                        </div>



                    </div>

                    <!-- Right column: Image -->
                    <div class="relative">
                        <div class="aspect-square rounded-lg overflow-hidden">
                            <img src="https://source.unsplash.com/random/800x800?concert" alt="Metal concert crowd" class="w-full h-full object-cover">
                        </div>
                    </div>
                </div>
            </div>
        </section>



        <!-- Stream2Own Section -->
		<section class="py-24 px-6 bg-[var(--bg-surface)]">
			<div class="max-w-5xl mx-auto">
				<div class="text-center mb-16">
					<span class="px-3 py-1 rounded-full text-[10px] md:text-xs tracking-widest uppercase bg-[var(--bg-primary)] text-[var(--accent)] border border-[var(--accent)]/40 inline-block mb-4">
						Stream-2-Own
					</span>
					<h2 class="text-4xl md:text-5xl font-[Secular_One] mb-4">Stream Without Subscription<br>Until You Own The Music</h2>
					<p class="text-[var(--text-secondary)] max-w-2xl mx-auto">Stream until you own the music. No subscriptions. No DRM. Just pure ownership.</p>
				</div>

				<div class="grid grid-cols-1 md:grid-cols-3 gap-8 mt-12">
					<!-- Card 1: Stream -->
					<div class="surface p-6 rounded-lg border border-[var(--hex-violet)]/20">
						<div class="w-12 h-12 flex items-center justify-center rounded-full bg-[var(--hex-violet)]/20 mb-4">
							<svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" style="color: var(--hex-violet)">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14.752 11.168l-3.197-2.132A1 1 0 0010 9.87v4.263a1 1 0 001.555.832l3.197-2.132a1 1 0 000-1.664z" />
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
							</svg>
						</div>
						<h3 class="text-xl font-bold mb-2" style="color: var(--blood-sigil)">Stream By Stream</h3>
						<p class="text-[var(--text-secondary)]">
                            Each time you listen, you’re building ownership. Your streams directly support the artist and bring you closer to owning the track forever.
                        </p>
					</div>

					<!-- Card 2: Progress -->
					<div class="surface p-6 rounded-lg border border-[var(--hex-violet)]/20">
						<div class="w-12 h-12 flex items-center justify-center rounded-full bg-[var(--hex-violet)]/20 mb-4">
							<svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" style="color: var(--hex-violet)">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
							</svg>
						</div>
						<h3 class="text-xl font-bold mb-2" style="color: var(--blood-sigil)">Own The Song</h3>
						<p class="text-[var(--text-secondary)]">
                            Once you’ve streamed a song enough times, it’s yours. Download it, keep it forever, and enjoy your music on your own terms.
                        </p>
					</div>

                    <!-- Card 2: Progress -->
                    <div class="surface p-6 rounded-lg border border-[var(--hex-violet)]/20">
                        <div class="w-12 h-12 flex items-center justify-center rounded-full bg-[var(--hex-violet)]/20 mb-4">
                            <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" style="color: var(--hex-violet)">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
                            </svg>
                        </div>
                        <h3 class="text-xl font-bold mb-2" style="color: var(--blood-sigil)">Cost Calculator</h3>
                        <StreamingCostSlider />
                    </div>

				</div>

				<div class="text-center mt-12">
					<a href="/manifesto#stream2own" class="btn btn-secondary">Learn More About Stream-2-Own</a>
				</div>
			</div>
		</section>



        <!-- FAQ Section -->
		<section class="py-24 px-6">
			<div class="max-w-4xl mx-auto">
				<div class="text-center mb-16">
					<span class="px-3 py-1 rounded-full text-[10px] md:text-xs tracking-widest uppercase bg-[var(--bg-surface)] text-[var(--accent)] border border-[var(--accent)]/40 inline-block mb-4">
						FAQ
					</span>
					<h2 class="text-4xl md:text-5xl font-[Secular_One] mb-4">Common Questions</h2>
					<p class="text-[var(--text-secondary)] max-w-2xl mx-auto">Everything you need to know about BEORWL's revolutionary Stream2Own platform</p>
				</div>

				<div class="space-y-4">

                    <details class="surface group rounded-lg">
						<summary class="p-6 cursor-pointer list-none font-bold text-xl flex justify-between items-center">
							<span style="color: var(--blood-sigil)">How do you finance yourselves?</span>
							<svg class="w-6 h-6 transition-transform duration-300 group-open:rotate-180" fill="none" viewBox="0 0 24 24" stroke="currentColor">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
							</svg>
						</summary>
						<div class="px-6 pb-6 text-[var(--text-secondary)] content">
							<p>

                              </p>
						</div>
					</details>

                    <details class="surface group rounded-lg">
                        <summary class="p-6 cursor-pointer list-none font-bold text-xl flex justify-between items-center">
                            <span style="color: var(--blood-sigil)">How can I participate or support you?</span>
                            <svg class="w-6 h-6 transition-transform duration-300 group-open:rotate-180" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
                            </svg>
                        </summary>
                        <div class="px-6 pb-6 text-[var(--text-secondary)] content">
                            <p>

                            </p>
                        </div>
                    </details>


                    <details class="surface group rounded-lg">
                        <summary class="p-6 cursor-pointer list-none font-bold text-xl flex justify-between items-center">
                            <span style="color: var(--blood-sigil)">How do you ensure that you will remain fair in the future?</span>
                            <svg class="w-6 h-6 transition-transform duration-300 group-open:rotate-180" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
                            </svg>
                        </summary>
                        <div class="px-6 pb-6 text-[var(--text-secondary)] content">
                            <p>

                            </p>
                        </div>
                    </details>

                    <details class="surface group rounded-lg">
                        <summary class="p-6 cursor-pointer list-none font-bold text-xl flex justify-between items-center">
                            <span style="color: var(--blood-sigil)">What is your position on AI?</span>
                            <svg class="w-6 h-6 transition-transform duration-300 group-open:rotate-180" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
                            </svg>
                        </summary>
                        <div class="px-6 pb-6 text-[var(--text-secondary)] content">
                            <p>
                            </p>
                        </div>
                    </details>


                    <details class="surface group rounded-lg">
                        <summary class="p-6 cursor-pointer list-none font-bold text-xl flex justify-between items-center">
                            <span style="color: var(--blood-sigil)">When will the app be ready?</span>
                            <svg class="w-6 h-6 transition-transform duration-300 group-open:rotate-180" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
                            </svg>
                        </summary>
                        <div class="px-6 pb-6 text-[var(--text-secondary)] content">
                            <p>
                            </p>
                        </div>
                    </details>


				</div>

				<div class="text-center mt-12">
					<a href="/manifesto" class="btn btn-primary">Read Our Full Manifesto</a>
				</div>
			</div>
		</section>


        <Footer />
	</main>
</Layout>

<style>
/* FAQ Animations */
details > summary {
    transition: background-color 0.3s;
}

details > summary:hover {
    background-color: rgba(255, 255, 255, 0.05);
}

details[open] summary ~ * {
    animation: slideDown 0.3s ease-in-out;
}

details:not([open]) summary ~ * {
    animation: slideUp 0.3s ease-in-out;
}

@keyframes slideDown {
    0% {
        opacity: 0;
        transform: translateY(-10px);
    }
    100% {
        opacity: 1;
        transform: translateY(0);
    }
}

@keyframes slideUp {
    0% {
        opacity: 1;
        transform: translateY(0);
    }
    100% {
        opacity: 0;
        transform: translateY(-10px);
    }
}
</style>
