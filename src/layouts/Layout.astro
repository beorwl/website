---
import '../styles/global.css';

const base = import.meta.env.BASE_URL;
const withBase = (path: string) => `${base.replace(/\/$/, '')}/${path.replace(/^\//, '')}`;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="BEORWL - Extreme Metal Streaming Platform. Artist First, Fuck Capitalism & No AI Bullshit. Raw, authentic music from artists who refuse to be exploited." />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<meta name="generator" content={Astro.generator} />
		<title>Time to Stream Fair Again</title>
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Secular+One&display=swap" rel="stylesheet">
	</head>
	<body class="flex flex-col min-h-screen">
		<main class="flex-grow">
			<slot />
		</main>
	</body>
</html>

<style is:global>
</style>
